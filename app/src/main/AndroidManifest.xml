<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="website.bloop.app">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <!--
             The API key for Google Maps-based APIs is defined as a string resource.

             The API key is stored as a build variable. The recommended place to store this value is
             in the ~/.gradle/gradle.properties file in the format:

             BLOOP_GOOGLE_MAPS_API_KEY=<key>
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/BLOOP_GOOGLE_MAPS_API_KEY" />

        <activity android:name=".PlayLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TutorialActivity"
            android:label="@string/app_intro" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BloopActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name=".FlagCreationActivity" />
    </application>

</manifest>