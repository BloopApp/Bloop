<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_flag_creation">
    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="website.bloop.app.views.BackgroundLandscapeView"
        android:id="@+id/background_view" />

    <RelativeLayout
        android:id="@+id/ui_flag_creation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="website.bloop.app.activities.FlagCreationActivity"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/flag_view_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <view
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                class="website.bloop.app.views.FlagView"
                android:id="@+id/flag_view"
                android:layout_weight="4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:weightSum="2">
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:text="Place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/next_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_weight="1"
                android:minHeight="74dp"
                android:textSize="24sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

